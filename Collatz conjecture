#include <stdio.h>

int main() 
{
    int n, s = 0;

    printf("Enter a positive integer: ");
    scanf("%d", &n);

    if (n <= 0) 
    {
        printf("Please enter a positive integer.\n");
        return 1;
    }

    while (n!= 1) 
    {
        printf("%d ", n);
        if (n%2 == 0) 
        {
            n/= 2;
        } 
        else 
        {
            n= 3*n+1;
        }
        s++;
    }

    printf("%d\n", nm);
    printf("Number of steps: %d\n", s);

    return 0;
}
